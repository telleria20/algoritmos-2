void cargarV(float v[], int n){
	int i;
	for(i=0;i<n;i++){
		cout<<"Ingrese el nro de registro del alumno:";
		cin>>v[i];
	}
}

void mostrarV(float v[], int n){
	int i;
	for(i=0;i<n;i++){
		cout<<v[i]<<" ";
	}
}

float promedio(float v[], int n){
	float s=0;
	int i;
	for(i=0;i<n;i++){
		s=s+v[i];
		return s/n;
	}
}


