#include <iostream>
#include <conio.h>
#include <stdio.h>
using namespace std;
struct tvector{
	int svec[50];
};
tvector vec[90];
void cargar(tvector vec[],int n){
	int i,j;
	for(i=0;i<n;i++){
		for(j=0;j<n;j++){
		cout<<"ingrese el elemento:";
		cin>>vec[i].svec[j];
	    }
	}
}
void mostrar(tvector vec[],int n){
	int i,j;
	for(i=0;i<n;i++){
		for(j=0;j<n;j++){
		cout<<" "<<vec[i].svec[j];
	    }
		cout<<"  ";
	}
}
int suma(tvector vec[],int n){
	int i,j,s=0;
	for(i=0;i<n;i++){
		for(j=0;j<n;j++){
			s=s+vec[i].svec[j];
		}
	}
	return(s);
}
bool esprimo(int n){
	int i;
	bool k=true;
	for(i=2;i<n;i++){
		if(n%i==0){
			k=false;
		}
	}
	return(k);
}
int sumaprimos(tvector vec[],int n){
	int i,j,s=0;
	for(i=0;i<n;i++){
		for(j=0;j<n;j++){
			if(esprimo(vec[i].svec[j])==true){
				s=s+vec[i].svec[j];
			}
		}
	}
	return(s);
}
int sumadetcasilla(tvector vec[],int n){
	int i,j,s=0;
	for(i=0;i<n;i++){
		for(j=0;j<n;j++){
			if(i==j){
				s=s+vec[i].svec[j];
			}
		}
	}
	return(s);
}
void invertir(int vec[],int n){
	int i,aux;
	for(i=0;i<n/2;i++){
		aux=vec[i];
		vec[i]=vec[n-1-i];
		vec[n-1-i]=aux;
	}
}
void invertirsvec(tvector vec[],int n){
	int i;
	for(i=0;i<n;i++){
		invertir(vec[i].svec,n);
	}
}

void main(){
tvector vec[90];
int n,sum,sp,sc;
cout<<"ingresar el tamaÃ±o del vector:";
cin>>n;
cargar(vec,n);
mostrar(vec,n);
sum=suma(vec,n);
cout<<endl;
cout<<"la suma es:"<<sum;
sp=sumaprimos(vec,n);
cout<<endl;
cout<<"la suma de los primos es:"<<sp;
sc=sumadetcasilla(vec,n);
cout<<endl;
cout<<"la suma de la casilla del mismo num que el vector es:"<<sc;
cout<<endl;
invertirsvec(vec,n);
mostrar(vec,n);
getch();
}
